{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./lib",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es2018",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "jsx": "react",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack"
  ]
}