{
  "name": "erxes-common-ui",
  "version": "0.1.7",
  "description": "erxes component library",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "erxes",
    "component",
    "library",
    "javascript",
    "typescript"
  ],
  "directories": {
    "lib": "lib"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erxes/erxes-ui.git"
  },
  "bugs": {
    "url": "https://github.com/erxes/erxes-icon/issues"
  },
  "author": "erxes",
  "homepage": "https://erxes.io/",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@nateradebaugh/react-datetime": "4.1.0",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "color": "^3.1.3",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "react-scripts": "3.0.1",
    "styled-components": "4.1.3",
    "styled-components-ts": "0.0.15",
    "typescript": "^3.4.1",
    "validator": "12.1.0",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "start-storybook -p 9009 -s public",
    "eject": "react-scripts eject",
    "build-storybook": "build-storybook --no-dll",
    "lint": "eslint './src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --fix './src/**/*.{js,jsx,ts,tsx}'",
    "clean": "rm -rf ./lib",
    "prebuild": "yarn clean",
    "build": "tsc --build \"./tsconfig.json\"",
    "copy-files": "copyfiles -u 1 src/style/erxes-base.css lib/",
    "postbuild": "yarn run copy-files"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "src/**/*.stories.js"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-knobs": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/node-logger": "^6.0.28",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.28",
    "babel-loader": "^8.1.0",
    "copyfiles": "^2.4.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.1.2",
    "react-is": "^17.0.1",
    "storybook-readme": "^5.0.8"
  }
}
